{
  "tokenMonitor": {
    "enabled": true,
    "autoStart": true,
    "updateInterval": 1000,
    "showInStatusBar": true,
    "showNotifications": false,
    "calculationMethod": "tiktoken",
    "fallbackMethod": "estimation",
    "cacheEnabled": true,
    "cacheSize": 1000,
    "monitoring": {
      "trackChatMessages": true,
      "trackFileSaves": true,
      "trackTaskCompletion": true,
      "realTimeUpdates": true
    },
    "reporting": {
      "autoGenerateDaily": false,
      "autoGenerateWeekly": true,
      "outputFormat": "html",
      "includeTrends": true,
      "includeOptimization": true
    },
    "costCalculation": {
      "enabled": true,
      "defaultModel": "claude-sonnet-4.0",
      "showWarnings": true,
      "warningThreshold": 1000
    },
    "ui": {
      "statusBarPosition": "right",
      "statusBarPriority": 100,
      "colorCoding": true,
      "showTooltips": true,
      "compactMode": false
    },
    "storage": {
      "dataPath": "./data",
      "backupEnabled": true,
      "backupInterval": "24h",
      "retentionDays": 90,
      "compressionEnabled": true
    },
    "integration": {
      "hookEvents": [
        "chat.message.sent",
        "chat.message.received",
        "file.save",
        "agent.task.completed"
      ],
      "commandPalette": true,
      "keyboardShortcuts": {
        "calculate": "Ctrl+Shift+T",
        "compare": "Ctrl+Shift+C",
        "report": "Ctrl+Shift+R",
        "toggle": "Ctrl+Shift+M"
      }
    }
  }
}